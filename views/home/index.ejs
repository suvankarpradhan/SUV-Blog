<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/header-link') %>
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <div class="container my-5">
      <h1>Recent Post</h1>
      <hr />
      <div class="row">
        <% allBlogs.forEach((blog,index) => { %> <% if(index<4){ %>
        <div class="col-sm-6 mb-4">
          <div class="card shadow">
            <div class="card-body">
              <h5 class="card-title text-dark"><%= blog.blogTitle %></h5>
              <p class="text-muted">
                <em><%= blog.date.toLocaleDateString() %></em>
              </p>
              <p class="card-text text-secondary">
                <%= blog.blogBody.substring(0,200) %>...
              </p>
              <a href="/post/<%=blog._id%>" class="btn btn-secondary btn-sm"
                >readmore
                <i class="bi bi-arrow-right-short" style="font-size: 15px"></i
              ></a>
            </div>
          </div>
        </div>
        <% }}) %>
      </div>
    </div>
    <div class="container my-5" id="all">
      <h1>All Posts</h1>
      <hr />
      <div class="row">
        <% allBlogs.forEach(blog => { %>
        <div class="col-sm-6 mb-4">
          <div class="card shadow">
            <div class="card-body">
              <h5 class="card-title text-dark"><%= blog.blogTitle %></h5>
              <p class="text-muted">
                <em><%= blog.date.toLocaleDateString() %></em>
              </p>
              <p class="card-text text-secondary">
                <%= blog.blogBody.substring(0,200) %>...
              </p>
              <a href="/post/<%=blog._id%>" class="btn btn-secondary btn-sm"
                >readmore
                <i class="bi bi-arrow-right-short" style="font-size: 15px"></i
              ></a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include('../partials/footer-link') %>
  </body>
  <%- include('../partials/footer') %>
</html>
